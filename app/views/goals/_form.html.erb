
    <%= form_for([@user, @goal]) do |f| %>

        <%= f.text_field :description, placeholder: "Describe your goal" %><br><br>
        <%= f.text_field :key_result, placeholder: "Key result expected" %><br><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, :include_blank => 'Choose a category' %><br><br>
        By when: <br>
        <%= f.date_field :by_when %><br><br>

        <%= f.submit %>

    <% end %>
